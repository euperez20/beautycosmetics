<div class="container mt-5">
  <div class="row">
    <div class="col-md-6">
      <h3>Pre-Order</h3>
      <div class="mb-3">
        <p class="mb-0">Customer: <%= session[:user_name] %></p>
        <p class="mb-0">Address: <%= session[:user_address] %></p>
        <p class="mb-0">Province: <%= Province.find_by(id: session[:province_id])&.name %></p>
      </div>
      <div class="mb-3">
        <p class="mb-0">Total GST: <%= number_to_currency(session[:total_gst]) %></p>
        <p class="mb-0">Total PST: <%= number_to_currency(session[:total_pst]) %></p>
        <p class="mb-0">Total HST: <%= number_to_currency(session[:total_hst]) %></p>
        <p class="mb-0">Total + Taxes: <%= number_to_currency(session[:total_amount_with_taxes]) %></p>
      </div>
    </div>
    <div class="col-md-6">
      <% if @cart_items.any? %>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Product Name</th>
              <th>Quantity</th>
              <th>Price</th>
            </tr>
          </thead>
          <tbody>
            <% @cart_items.each do |item| %>
              <tr>
                <td><%= item['product_name'] %></td>
                <td><%= item['quantity'] %></td>
                <td><%= number_to_currency(item['price'].to_f) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>No hay productos en el carrito.</p>
      <% end %>
    </div>
  </div>
</div>
