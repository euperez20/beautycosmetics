<%= render 'shared/header' %>

<%= render @product %>


<!-- breadcrum -->

<% @breadcrumbs.each_with_index do |breadcrumb, index| %>
  <% if index < @breadcrumbs.length - 1 %>
    <%= link_to breadcrumb[:name], breadcrumb[:path] %> >
  <% else %>
    <%= breadcrumb[:name] %>
  <% end %>
<% end %>



