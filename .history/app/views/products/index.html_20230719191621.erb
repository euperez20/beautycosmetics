<p style="color: green"><%= notice %></p>

<%= render 'shared/header' %>

<h1>Products</h1>

<div class="dropdown">
  <button class="btn btn-secondary dropdown-toggle" type="button" id="categoryDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Select a category
  </button>
  <div class="dropdown-menu" aria-labelledby="categoryDropdown">
    <%= link_to "All Categories", products_path, class: "dropdown-item" %>
    <% @categories.each do |category| %>
      <%= link_to category.name, category_products_path(category), class: "dropdown-item" %>
    <% end %>
  </div>
</div>



<div id="products">
  <!-- Search form -->
  <%= form_tag(products_path, method: :get, class: 'form-inline my-3') do %>
    <%= text_field_tag :search, params[:search], class: 'form-control mr-sm-2', placeholder: 'Search by name' %>
    <%= submit_tag 'Search', class: 'btn btn-outline-success my-2 my-sm-0' %>
  <% end %>

  <!-- Products cards -->
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-md-4">
        <div class="card mb-4">
          <!-- Card content (omitted for brevity) -->
        </div>
      </div>
    <% end %>
  </div>

  <!-- Pagination -->
  <div class="pagination justify-content-center">
    <%= paginate @products, theme: 'twitter-bootstrap-4' %>
  </div>
</div>

<%= link_to "New product", new_product_path %>



