
<%= render 'shared/header' %>

<div class="container">
  <% if @category %>
    <h1>Products in <%= @category.name %> category</h1>



    <div class="row">
      <% @products.each do |product| %>
        <div class="col-md-4">

<%# testing image %>
<% if product.image.attached? %>
      <img src="<%= product.image.url %>" class="card-img-top" alt="<%= product. %>">
    <% else %>
      <!-- Mostrar una imagen de reemplazo si no hay imagen adjunta -->
      <img src="/assets/imagen_de_reemplazo.jpg" class="card-img-top" alt="<%= product.title %>">
    <% end %>

<%# End testing image %>
            <div class="card-body">
              <h5 class="card-title"><%= product.name %></h5>
              <p class="card-text"><%= product.description %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>No category found for show_products.</p>
  <% end %>
</div>
